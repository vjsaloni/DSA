class Solution{
  public:
    int minJumps(int arr[], int n){
     
        int curEnd = 0, curFarthest = 0, jumps = 0;
        for (int i = 0; i < n - 1; i++) {
            curFarthest = max(curFarthest, i + arr[i]);
                if (i == curEnd) {
                    jumps++;
                    curEnd = curFarthest;
                    if (curEnd >= n - 1) {
                    return jumps;
                }
            }
        }
        return -1;
    }
};
